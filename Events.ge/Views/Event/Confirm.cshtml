@model EventResponseModel
<form method="post" asp-action="Confirm">
    <input hidden asp-for="Id" />
    <div class="card  container pt-4">
        <div class="card-header bg-gradient text-black ml-0  row ">
            <div class="col-12 col-md-6">
                <h1 class="text-white">@Model.Title</h1>
            </div>
            <div class="col-12 col-md-6 text-end pt-4">
                <span class="badge bg-success pt-2" style="height:30px; color:honeydew;">
                    Event Time: @Model.StartDate.ToString("dd.MM.yyyy:hh:mm tt")
                    -  @Model.EndDate.ToString("dd.MM.yyyy:hh:mm tttt")
                </span>
            </div>
        </div>
        <div class="card-body row container">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-8 col-lg-8">
                        <div class="row text-center pl-2" style="color:azure; width:1200px; font-weight:bold">
                            <div class="p-1 col-2 bg-secondary">
                                <div>Tickets Left: @Model.NumberOfTickets </div>
                            </div>
                        </div>
                        <div class="row text-center pl-2" style="color:azure; width:1200px; font-weight:bold">
                            <div class="p-1 col-2 bg-secondary">
                                <div>Price: @Model.TicketPrice.ToString("c")</div>
                            </div>
                        </div>
                        <div class="row pl-2">
                            <p class="text-white">@Html.Raw(Model.Description)</p>
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 offset-lg-1 text-center">
                        <img src="@Model.ImageUrl" width="100%" class="rounded" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="row">
                    <div class="col-12 col-md-6 pb-3">
                        <p>Set Booking Period</p>  <label for="BookTimeInMinutes"></label>
                        <input type="number" name="BookTimeInMinutes" class="form-control" />

                    </div>
                    <div class="col-12 col-md-6 pb-3">
                        <p>Give user days for event update</p>
                        <label for="DaysForUpdate"></label>
                        <input type="number" name="DaysForUpdate" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-6 pb-3">
                        <button type="submit" class="btn btn-primary" style="width:100%; height:50px;">Confirm Event</button>
                    </div>
                    <div class="col-12 col-md-6 pb-3">
                        <a class="btn btn-danger form-control " style="height:50px;" asp-controller="Event" asp-action="Reject" asp-route-id=@Model.Id>Reject Event</a>
                    </div>
                </div>

                <div class="col-6 col-md-12 pb-1">
                    <a class="btn btn-warning form-control " style="height:50px;" asp-action="GetUnconfirmedEvents">Back to List</a>
                </div>
            </div>

        </div>
    </div>
</form>
@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}